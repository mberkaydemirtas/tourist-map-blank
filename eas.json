{
  "cli": {
    "version": ">= 3.0.0"
  },
  "build": {
    "base": {
      "node": "20.19.5",
      "env": {
        "NPM_CONFIG_FETCH_RETRIES": "5",
        "NPM_CONFIG_FETCH_RETRY_MINTIMEOUT": "20000",
        "NPM_CONFIG_FETCH_RETRY_MAXTIMEOUT": "120000",
        "NPM_CONFIG_FETCH_TIMEOUT": "600000"
      }
    },
    "development": {
      "extends": "base",
      "developmentClient": true,
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "extends": "base",
      "distribution": "internal"
    },
    "production": {
      "extends": "base",
      "android": {
        "buildType": "app-bundle"
      },
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  }
}
